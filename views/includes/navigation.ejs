    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <%if (isAuthenticated) { %> 
                    <li class="nav-item">
                        <a class="nav-link <%= path === '/' ? 'active' : '' %>" href="/">Main</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= path === '/form' ? 'active' : '' %>" href="/form">Add an address</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= path === '/products' ? 'active' : '' %>" href="/new-user-form">Add user</a>
                    </li>
                <%} else { %> 
                    <li class="nav-item">
                        <a class="nav-link <%= path === '/login' ? 'active' : '' %>" href="/new-user-form">Signup</a>
                    </li>
                <% } %> 
